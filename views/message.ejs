<% layout('layout') %>

<div id="wrapper">
  <div id="page-content-wrapper">
    <div class="container-fluid main_body">
      <div class="bodyDiv">
        <h4 style="">Send Message</h4>

        <input
          type="hidden"
          name="receiverId"
          id="receiverId"
          class="form-control"
          value="<%= data._id %>"
        /><br />

        <div class="msg">
          <div class="">
            <div class="">
              <ul class="chat">
                <% chats.forEach(function(val){ %>
                <li class="left clearfix">
                  <span class="chat-img pull-left">
                    <img
                      src="http://placehold.it/50/55C1E7/fff&amp;text=U"
                      alt="User Avatar"
                      class="img-circle"
                      height="50px"
                      width="50px"
                    />
                  </span>
                  <div class="chat-body clearfix">
                    <div class="header">
                      <strong class="primary-font"
                        ><%= val.userFromName %></strong
                      >
                      <small class="pull-right ">
                        <span class=""></span><%=
                        moment(val.createdAt).format('LT') %>
                      </small>
                    </div>
                    <p>
                      <%= val.body %>
                    </p>
  
                  </div>
                </li>
                <% }) %>
              </ul>
            </div>
          </div>
        </div>
        <br />

        <div class="form-group ">
          <textarea
            id="msg"
            name="message"
            class="form-control"
            placeholder="Enter message"
            rows="5"
            cols="60"
          ></textarea>
        </div>

        <div class="form-group">
          <input
            type="submit"
            id="message"
            value="Send Message"
            class="form-control btn btn-primary"
            name="send"
          />
        </div>


      </div>
    </div>
  </div>
</div>

<script src="/js/moment.js"></script>
